#include <oddirs.h>

#ifndef OD_NO_QT
# include <QCoreApplication>
#endif

void setQtPaths()
{
#ifndef OD_NO_QT
    QStringList list;

    //First, always user our own env
    list += QString( GetLibPlfDir() );

    //Secondly, we may be in the build env, and can use that
    list += QString("@QTDIR@/plugins");

    QCoreApplication::setLibraryPaths( list );
#endif
}
