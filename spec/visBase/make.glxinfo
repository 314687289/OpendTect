#!/bin/csh

if ( $HDIR == "lux" ) then
    gcc od_glxinfo.c -o $WORK/bin/$PLFSUBDIR/O/od_glxinfo -lGLU -lGL
    exit 0
else if ( $HDIR == "sgi" || $HDIR == "sun5" ) then
    gcc od_glxinfo.c -o $WORK/bin/$PLFSUBDIR/O/od_glxinfo -lGLU -lGL -lX11
    exit 0
else if ( $HDIR == "win"  ) then
    gcc -mno-cygwin w32glxinfo.c -o $WORK/bin/$PLFSUBDIR/O/od_glxinfo -L/lib/w32api -lopengl32 -lgdi32
    exit 0
else 
    echo "Unknown platform"
endif
