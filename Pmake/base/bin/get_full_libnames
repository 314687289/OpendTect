#!/bin/csh
#__Pmake________________________________________________________________________
#
# $Id: get_full_libnames,v 1.2 2004-11-11 15:39:19 dgb Exp $
# This script returns the full libname for a given link directive
#_______________________________________________________________________________

if ( ! $?MAIN ) set MAIN=$WORK

set libsubd=$1
shift

foreach inp ( $* )
	set lib=$inp
	if ( `echo $inp|awk -f $PMAKE/check.1.awk` == 1 ) then
	    if( $HDIR == "win" ) then
		set lib=`echo $inp|awk -f $PMAKE/check.2.awk`.lib
	    else
		set lib=lib`echo $inp|awk -f $PMAKE/check.2.awk`.a
	    endif
	else
		set lib=$lib:t
	endif

	if ( ! -e $WORK/lib/$libsubd/$lib ) then
		echo "$MAIN/lib/$libsubd/$lib"
	else
		echo "$WORK/lib/$libsubd/$lib"
	endif
end

exit 0
