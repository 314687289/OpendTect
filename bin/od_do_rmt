#!/bin/csh -f
#_______________________________________________________________________________
#
# (C) 2002 de Groot-Bril Earth Sciences B.V.
# $Id: od_do_rmt,v 1.4 2003-02-19 12:00:59 arend Exp $
#
# remote execution script
#_______________________________________________________________________________

set comm=""

next_arg:

if ( $1 == "+-+" ) then

	shift
	eval $comm
	set comm=""
	goto next_arg

else if ( $1 == "+-+-+" ) then

	shift
	eval $comm
	goto do_rest

else

	set comm="$comm $1"
	shift
	goto next_arg

endif

do_rest:

# echo "dGB_DATA = $dGB_DATA"
# echo "dGB_USER = $dGB_USER"
# echo "LM_LICENSE_FILE = $LM_LICENSE_FILE"
# echo "DISPLAY = $DISPLAY"
# echo "$dGB_APPL/bin/dgb_exec $*"
$dGB_APPL/bin/dgb_exec $*
exit $status
