#!/bin/csh -f
#_______________________________________________________________________________
#
# (C) 2002 de Groot-Bril Earth Sciences B.V.
# $Id: od_do_rmt,v 1.6 2003-10-19 13:53:07 bert Exp $
#
# remote execution script
#_______________________________________________________________________________

set comm=""

next_arg:

if ( $1 == "+-+" ) then

	shift
	eval $comm
	set comm=""
	goto next_arg

else if ( $1 == "+-+-+" ) then

	shift
	eval $comm
	goto do_rest

else

	set comm="$comm $1"
	shift
	goto next_arg

endif

do_rest:

if ( $?DTECT_DEBUG ) then
    echo "DTECT_DATA = $DTECT_DATA" > /tmp/dgbdebug.log
    echo "DTECT_USER = $DTECT_USER" >> /tmp/dgbdebug.log
    echo "DTECT_APPL = $DTECT_APPL" > /tmp/dgbdebug.log
    echo "LM_LICENSE_FILE = $LM_LICENSE_FILE" >> /tmp/dgbdebug.log
    echo "DISPLAY = $DISPLAY" >> /tmp/dgbdebug.log
    echo "$DTECT_APPL/bin/od_exec $*" >> /tmp/dgbdebug.log
    $DTECT_APPL/bin/od_exec $* >> /tmp/dgbdebug.log

else

    $DTECT_APPL/bin/od_exec $*

endif

exit $status
