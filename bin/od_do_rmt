#!/bin/csh -f
#_______________________________________________________________________________
#
# (C) dGB Beheer B.V.
# $Id: od_do_rmt,v 1.12 2004-11-09 13:03:50 arend Exp $
#
# remote execution script
#_______________________________________________________________________________

if ( $?DTECT_DEBUG ) set verbose=yes

set comm=""
set datahost=""
set datadrive=""
set datashare=""
set datapass=""

next_arg:

if ( $1 == "--remotepass" ) then
        set remotepass="$2"
        shift; shift
        goto next_arg

else if ( $1 == "--data-host" ) then
        set datahost="$2"
        shift; shift
        goto next_arg

else if ( $1 == "--data-drive" ) then
        set datadrive="$2"
        shift; shift
        goto next_arg

else if ( $1 == "--data-share" ) then
        set datashare="$2"
        shift; shift
        goto next_arg

else if ( $1 == "+-+" ) then

	shift
	set cmd=`echo $comm | sed "s%-=-%'%g"`
	eval $cmd
	set comm=""
	goto next_arg

else if ( $1 == "+-+-+" ) then

	shift
	set cmd=`echo $comm | sed "s%-=-%'%g"`
	eval $cmd
	goto do_res

else

	set comm="$comm $1"
	shift
	goto next_arg

endif

do_rest:

if ( -e "$DTECT_APPL/bin/init_dtect" ) then
    if ( $?DTECT_DEBUG ) echo "$0 : sourcing $DTECT_APPL/bin/init_dtect"
    source "$DTECT_APPL/bin/init_dtect"
endif

if ( $?DTECT_DEBUG ) then

    set logfile=/tmp/oddebug$$.log
    if ( $?TMP ) then
	set logfile="$TMP/oddebug$$.log"
    else if ( $?TEMP ) then
	set logfile="$TEMP/oddebug$$.log"
    endif

    echo "logging to $logfile"
    if ( $?DTECT_DATA ) then
	echo "$0 : DTECT_DATA = $DTECT_DATA" > $logfile
    endif
    echo "$0 : DTECT_APPL = $DTECT_APPL" >> $logfile
    if ( $?DTECT_USER ) then
	echo "$0 : DTECT_USER = $DTECT_USER" >> $logfile
    else
	echo "$0 : DTECT_USER = <empty>" >> $logfile
    endif
    if ( $?LD_LIBRARY_PATH ) then
	echo "$0 : LD_LIBRARY_PATH = $LD_LIBRARY_PATH" >> $logfile
    else
	echo "$0 : LD_LIBRARY_PATH = <empty>" >> $logfile
    endif
    if ( $?LM_LICENSE_FILE ) then
	echo "$0 : LM_LICENSE_FILE = $LM_LICENSE_FILE" >> $logfile
    else
	echo "$0 : LM_LICENSE_FILE = <empty>" >> $logfile
    endif
    if ( $?DISPLAY ) then
	echo "$0 : DISPLAY = $DISPLAY" >> $logfile
    else
	echo "$0 : DISPLAY = <empty>" >> $logfile
    endif

    echo "$0 : $DTECT_APPL/bin/od_exec $*" >> $logfile
    "$DTECT_APPL/bin/od_exec" $* >> $logfile

else

    "$DTECT_APPL/bin/od_exec" $*

endif

exit $status
