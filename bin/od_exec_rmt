#!/bin/csh -f
#_______________________________________________________________________________
#
# (C) 1999 de Groot-Bril Earth Sciences B.V.
# $Id: od_exec_rmt,v 1.1 2002-01-10 14:20:36 dgb Exp $
#
# module remote startup script
#_______________________________________________________________________________

if ( ! $?dGB_APPL ) then
	echo "Error : dGB program not initialized."
	exit 1
endif

set rh=$1
shift

set comm="setenv dGB_DATA $dGB_DATA ; setenv dGB_APPL $dGB_APPL"

if ( $?dGB_USER ) then
	set comm="${comm} ; setenv dGB_USER $dGB_USER"
endif

if ( $?LM_LICENSE_FILE ) then
	set comm="${comm} ; setenv LM_LICENSE_FILE $LM_LICENSE_FILE"
endif

if ( $?DISPLAY ) then
	set dnm=`echo $DISPLAY|sed 's/://'| awk '{print $1}'`
	if ( $dnm == local || $dnm == unix || $dnm == 0 || $dnm == "0.0" ) then
		set hona=`uname -a|awk '{print $2}'`
		set nr=`echo $DISPLAY|sed 's/://'| awk '{print $2}'`
		if ( $nr == "" ) set nr=0
		setenv DISPLAY ${hona}":"${nr}.0
	endif
	else if ( $dnm == 1 || $dnm == "1.0" ) then
		set hona=`uname -a|awk '{print $2}'`
		setenv DISPLAY ${hona}":1.0"
	endif
	set comm="${comm} ; setenv DISPLAY $DISPLAY"
endif

set comm="rsh ${rh} ${comm} ; ${dGB_APPL}/bin/dgb_exec $*"
#echo "$comm"
$comm
