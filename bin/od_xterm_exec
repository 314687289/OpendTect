#!/bin/csh -f
#_______________________________________________________________________________
#
# (C) dGB Beheer B.V.
# $Id: od_xterm_exec,v 1.6 2004-09-22 13:33:41 dgb Exp $
#
# script to run in xterm for od_exec
#_______________________________________________________________________________

if ( $?DTECT_DEBUG ) set verbose=yes

set askclose=0

if ( $?DTECT_DEBUG ) then
    set askclose=1
endif

if ( $?DTECT_ALWAYS_ASKCLOSE ) then
    set askclose=1
endif

set DTECT_APPL="$1"
shift
source $DTECT_APPL/bin/init_dtect

if ( "$1" == "--askclose" ) then
    set askclose=1
    shift
endif

eval $*
set st=$status

if ( $askclose == 1 ) then
    echo ""
    echo -n "Press enter to close xterm ..."
    set inp=$<
endif

exit $st
