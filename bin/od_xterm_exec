#!/bin/csh -f
#_______________________________________________________________________________
#
# (C) dGB Beheer B.V.
# $Id: od_xterm_exec,v 1.5 2004-03-23 16:33:12 bert Exp $
#
# script to run in xterm for od_exec
#_______________________________________________________________________________

set askclose=0

if ( $?DTECT_DEBUG ) then
    set askclose=1
endif

if ( $?DTECT_ALWAYS_ASKCLOSE ) then
    set askclose=1
endif

set DTECT_APPL="$1"
shift
source $DTECT_APPL/bin/init_dtect

if ( "$1" == "--askclose" ) then
    set askclose=1
    shift
endif

eval $*
set st=$status

if ( $askclose == 1 ) then
    echo ""
    echo -n "Press enter to close xterm ..."
    set inp=$<
endif

exit $st
